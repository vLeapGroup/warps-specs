        },
        "default": {
          "type": ["string", "number", "boolean"]
        },
        "description": {
          "anyOf": [
            {
              "$ref": "#/definitions/WarpText"
            },
            {
              "type": "null"
            }
          ]
        },
        "label": {
          "$ref": "#/definitions/WarpText"
        },
        "max": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/definitions/WarpVarPlaceholder"
            }
