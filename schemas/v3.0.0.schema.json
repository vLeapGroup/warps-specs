        "description": {
          "anyOf": [
            {
              "$ref": "#/definitions/WarpText"
            },
            {
              "type": "null"
            }
          ]
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "$ref": "#/definitions/WarpText"
        },
        "next": {
          "type": "string"
        },
        "primary": {
          "type": "boolean"
