        "label": {
          "$ref": "#/definitions/WarpText"
        },
        "next": {
          "type": "string"
        },
        "primary": {
          "type": "boolean"
        },
        "transfers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        },
        "value": {
          "type": "string"
