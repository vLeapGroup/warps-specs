{
  "$ref": "#/definitions/Warp",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Warp": {
      "additionalProperties": false,
      "properties": {
        "actions": {
          "items": {
            "$ref": "#/definitions/WarpAction"
          },
          "type": "array"
        },
        "bot": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        },
        "messages": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "meta": {
          "$ref": "#/definitions/WarpMeta"
        },
        "name": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        },
        "protocol": {
          "type": "string"
        },
        "results": {
          "additionalProperties": {
            "$ref": "#/definitions/WarpResulutionPath"
          },
          "type": "object"
        },
        "title": {
          "type": "string"
        },
        "vars": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "required": ["protocol", "name", "title", "description", "actions"],
      "type": "object"
    },
    "WarpAction": {
      "anyOf": [
        {
          "$ref": "#/definitions/WarpTransferAction"
        },
        {
          "$ref": "#/definitions/WarpContractAction"
        },
        {
          "$ref": "#/definitions/WarpQueryAction"
        },
        {
          "$ref": "#/definitions/WarpCollectAction"
        },
        {
          "$ref": "#/definitions/WarpLinkAction"
        }
      ]
    },
    "WarpActionInput": {
      "additionalProperties": false,
      "properties": {
        "as": {
          "type": "string"
        },
        "bot": {
          "type": "string"
        },
        "default": {
          "type": ["string", "number", "boolean"]
        },
        "description": {
          "type": ["string", "null"]
        },
        "max": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/definitions/WarpVarPlaceholder"
            }
          ]
        },
        "min": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/definitions/WarpVarPlaceholder"
            }
          ]
        },
        "modifier": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "options": {
          "anyOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "additionalProperties": {
                "type": "string"
              },
              "type": "object"
            }
          ]
        },
        "pattern": {
          "type": "string"
        },
        "patternDescription": {
          "type": "string"
        },
        "position": {
          "$ref": "#/definitions/WarpActionInputPosition"
        },
        "required": {
          "type": "boolean"
        },
        "source": {
          "$ref": "#/definitions/WarpActionInputSource"
        },
        "type": {
          "$ref": "#/definitions/WarpActionInputType"
        }
      },
      "required": ["name", "type", "source"],
      "type": "object"
    },
    "WarpActionInputPosition": {
      "type": "string"
    },
    "WarpActionInputSource": {
      "enum": ["field", "query", "user:wallet", "hidden"],
      "type": "string"
    },
    "WarpActionInputType": {
      "type": "string"
    },
    "WarpActionType": {
      "enum": ["transfer", "contract", "query", "collect", "link"],
      "type": "string"
    },
    "WarpChain": {
      "type": "string"
    },
    "WarpCollectAction": {
      "additionalProperties": false,
      "properties": {
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "description": {
          "type": ["string", "null"]
        },
        "destination": {
          "additionalProperties": false,
          "properties": {
            "headers": {
              "additionalProperties": {
                "type": "string"
              },
              "type": "object"
            },
            "method": {
              "enum": ["GET", "POST", "PUT", "DELETE"],
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": ["url"],
          "type": "object"
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        }
      },
      "required": ["type", "label", "destination"],
      "type": "object"
    },
    "WarpContractAction": {
      "additionalProperties": false,
      "properties": {
        "abi": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "args": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "description": {
          "type": ["string", "null"]
        },
        "func": {
          "type": ["string", "null"]
        },
        "gasLimit": {
          "type": "number"
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "transfers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["type", "label", "gasLimit"],
      "type": "object"
    },
    "WarpLinkAction": {
      "additionalProperties": false,
      "properties": {
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "description": {
          "type": ["string", "null"]
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["type", "label", "url"],
      "type": "object"
    },
    "WarpMeta": {
      "additionalProperties": false,
      "properties": {
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "createdAt": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        }
      },
      "required": ["chain", "hash", "creator", "createdAt"],
      "type": "object"
    },
    "WarpQueryAction": {
      "additionalProperties": false,
      "properties": {
        "abi": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "args": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "description": {
          "type": ["string", "null"]
        },
        "func": {
          "type": "string"
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        }
      },
      "required": ["type", "label"],
      "type": "object"
    },
    "WarpResulutionPath": {
      "type": "string"
    },
    "WarpTransferAction": {
      "additionalProperties": false,
      "properties": {
        "address": {
          "type": "string"
        },
        "chain": {
          "$ref": "#/definitions/WarpChain"
        },
        "data": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
        },
        "label": {
          "type": "string"
        },
        "next": {
          "type": "string"
        },
        "transfers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": {
          "$ref": "#/definitions/WarpActionType"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["type", "label"],
      "type": "object"
    },
    "WarpVarPlaceholder": {
      "type": "string"
    }
  }
}
