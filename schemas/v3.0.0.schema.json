        "description": {
          "anyOf": [
            {
              "$ref": "#/definitions/WarpText"
            },
            {
              "type": "null"
            }
          ]
        },
        "inputs": {
          "items": {
            "$ref": "#/definitions/WarpActionInput"
          },
          "type": "array"
