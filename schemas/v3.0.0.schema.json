    "WarpActionInputPositionAssetObject": {
      "additionalProperties": false,
      "properties": {
        "amount": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      },
      "required": ["token", "amount"],
      "type": "object"
    },
    "WarpActionInputSource": {
      "enum": ["field", "query", "user:wallet", "hidden"],
      "type": "string"
    },
    "WarpActionInputType": {
      "type": "string"
    },
    "WarpActionType": {
      "enum": ["transfer", "contract", "query", "collect", "link"],
      "type": "string"
